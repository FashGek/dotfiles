export EC2_HOME=$HOME/.ec2
export PATH=$PATH:$EC2_HOME/bin
export EC2_PRIVATE_KEY=`ls $EC2_HOME/pk-*.pem`
export EC2_CERT=`ls $EC2_HOME/cert-*.pem`

export SCALA_HOME=$HOME/java/scala
export AKKA_HOME=$HOME/code/akka
export M2_HOME=$HOME/java/maven
export TC_HOME=$HOME/java/terracotta
export JBOSS_HOME=$HOME/code/jboss
export ANT_HOME=$HOME/java/ant
export GWT_HOME=$HOME/java/gwt
export JRUBY_HOME=/usr/local/jruby-1.5.6
export GLASSFISH_HOME=$HOME/java/glassfish
export TMP=$HOME/tmp
export RACK_ENV=development
export NODE_PATH=$HOME/.node_libraries

if [[ -f "$HOME/.amazon_keys" ]]; then
    source "$HOME/.amazon_keys";
fi

if [ `uname` == 'Linux' ];
then
	export JAVA_HOME=/usr/lib/jvm/jdk1.6.0_27
	alias ls='ls --color=auto'
else
	export PATH=/opt/local/bin:/opt/local/sbin:/usr/local/mysql/bin:$PATH
	export MANPATH=/opt/local/share/man:$MANPATH
	export EDITOR="mate -w"
	export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home
	export TERM=xterm-color
	alias ls='ls -G'
fi
export JDK_HOME=$JAVA_HOME
export NODE_PATH=/usr/local/lib/node
export PATH=/usr/local/share/npm/bin:$HOME/bin:$JAVA_HOME/bin:$ANT_HOME/bin:$HOME/.gem/ruby/1.8/bin:$PATH:$JRUBY_HOME/bin
export PATH=$PATH:/home/ijonas/.sm/bin:/home/ijonas/.sm/pkg/active/bin:/home/ijonas/.sm/pkg/active/sbin

 if [ -s ~/.rvm/scripts/rvm ] ; then source ~/.rvm/scripts/rvm ; fi
 [[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
